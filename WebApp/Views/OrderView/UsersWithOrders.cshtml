@model List<WebApp.ViewModels.UserWithOrdersVM>

@{
    ViewData["Title"] = "Users and Their CustomerOrders";
}

<h2>Users and Their Booked CustomerOrders</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

@foreach (var vm in Model)
{
    <!-- Only User can place order -->
    @if(vm.Role == "User")
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <strong>@vm.Name @vm.Surname</strong> (<em>@vm.Email</em>)
            </div>
            <div class="card-body">
                @if (!vm.CustomerOrders.Any())
                {
                    <p class="text-muted">No orders placed.</p>
                }
                else
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Payment Method</th>
                                <th>Ordered At</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var o in vm.CustomerOrders)
                            {
                                var rowClass = o.IsProductDeleted ? "table-danger" : "";

                                <tr class="@rowClass">
                                    <td>
                                        @o.ProductName

                                        @if (o.IsProductDeleted)
                                        {
                                            <span class="badge bg-danger ms-2">DELETED</span>
                                        }
                                    </td>
                                    <td>@o.PaymentMethod</td>
                                    <td>@o.OrderedAt.ToString("g")</td>
                                    <td>@o.Notes</td>
                                    <td>
                                        @if (o.IsProductDeleted)
                                        {
                                            <span class="text-danger">Archived</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    }
    
}
