@model WebApp.ViewModels.ProductVM

@{
    ViewData["Title"] = "Edit Product";
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

@foreach (var imgId in Model.ImageIds)
{
    <div style="display: inline-block; margin: 10px; text-align: center;">

        <img src="@Url.Action("GetImage", "ProductImage", new { id = imgId })"
             style="width: 150px; height: 150px; object-fit: cover; display: block;" />

        <form asp-controller="ProductImage" asp-action="Delete" method="post" style="margin-top: 5px;">
            <input type="hidden" name="imageId" value="@imgId" />
            <input type="hidden" name="productId" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Delete this image?');">
                Delete
            </button>
        </form>
    </div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(ViewData["CategoryList"] as SelectList)"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="CountryIds">Select Countries</label>
        <select asp-for="CountryIds" class="form-control" asp-items="ViewBag.CountryIds" multiple="multiple"></select>
    </div>

    <div class="form-group">
        <label asp-for="NewImages"></label>
        <input asp-for="NewImages" type="file" class="form-control" multiple/>
        <span asp-validation-for="NewImages" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
