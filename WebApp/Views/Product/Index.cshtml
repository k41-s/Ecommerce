@model List<WebApp.ViewModels.ProductVM>

@{
    ViewData["Title"] = "Products List";
    var name = ViewData["CurrentSearch"] as string;
    var categoryId = ViewData["CurrentCategoryId"] as int?;
    var categoryList = ViewData["CategoryList"] as SelectList;
    var currentPage = (int)ViewData["CurrentPage"];
    var totalPages = (int)ViewData["TotalPages"];
}

<h2>@ViewData["Title"]</h2>

<div class="btn-group mb-3" role="group" aria-label="Product CRUD navigation">
    <a asp-action="Create" class="btn btn-success">Add New Product</a>
</div>

<form method="get" asp-action="Index" class="row mb-3">
    <div class="col-md-4">
        <input type="text" name="name" value="@name" class="form-control" placeholder="Search by name" />
    </div>
    <div class="col-md-4">
        <select name="categoryId" class="form-select">
            <option value="0">-- All Categories --</option>
            @foreach (var type in categoryList)
            {
                <option value="@type.Value" selected="@(type.Value == categoryId?.ToString() ? "selected" : null)">
                    @type.Text
                </option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (product.ImageIds != null)
                    {
                        foreach (var imgId in product.ImageIds)
                        {
                            <img src="@Url.Action("GetImage", "ProductImage", new { id = imgId })"
                                 alt="Product Image"
                                 class="img-thumbnail"
                                 style="max-width: 200px;" />
                        }
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<nav>
    <ul class="pagination">
        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link"
                asp-action="Index"
                asp-route-search="@name"
                asp-route-categoryId="@categoryId"
                asp-route-page="@(currentPage - 1)">Previous</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">Page @currentPage of @totalPages</span>
        </li>
        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link"
                asp-action="Index"
                asp-route-search="@name"
                asp-route-categoryId="@categoryId"
                asp-route-page="@(currentPage + 1)">Next</a>
        </li>
    </ul>
</nav>
