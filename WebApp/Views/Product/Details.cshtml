@model WebApp.ViewModels.ProductVM

@{
    ViewData["Title"] = "Product Details";
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-warning" role="alert">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">

            @if (Model.ImageIds != null)
            {
                foreach (var imgId in Model.ImageIds)
                {
                    <img src="@Url.Action("GetImage", "ProductImage", new { id = imgId })"
                         alt="Product Image"
                         class="img-thumbnail"
                         style="max-width: 200px;" />
                }
            }
            else
            {
                <span>No Image</span>
            }

        </dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Countries</dt>
        <dd class="col-sm-10">
            @if (Model.CountryNames != null)
            {
                <ul>
                    @foreach (var country in Model.CountryNames)
                    {
                        <li>@country</li>
                    }
                </ul>
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
