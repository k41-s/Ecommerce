@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h1>Welcome to our Ecommerce Platform</h1>
    <p class="lead">Find the perfect product for you.</p>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <span class="nav-link" style="color: black;">Welcome: <strong>@User.Identity.Name</strong></span>
    }
    else
    {
        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">Login</a>
    }
</div>
